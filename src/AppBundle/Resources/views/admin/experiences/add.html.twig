{% extends '@App/layout.html.twig' %}

{% block title %}Ajouter une expérience - {{ parent() }}{% endblock title %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/forms.css') }}">
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}
    <h1 class="h1 margin-bottom-5 text-center">Ajouter une expérience</h1>

    {{ form_start(form) }}

    <div class="form-group padding-bottom-3">
        <div class="row form-group backgroundWA">
            <h3>Dates</h3>
        </div>
        <div class="row form-group">
            {{ form_label(form.beginAt, 'Date de début', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.beginAt, {'attr': {'class': 'col-3'} }) }}
            <div class="col-2"></div>
            {{ form_label(form.endAt, 'Date de fin', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.endAt, {'attr': {'class': 'col-3'} }) }}
        </div>
    </div>

    <div class="form-group padding-bottom-3">
        <div class="row form-group backgroundWA">
            <h3>Contrat</h3>
        </div>
        <div class="row form-group">
            {{ form_label(form.name, 'Titre du poste occupé', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control col-4'} }) }}
            <div class="col-1"></div>
            {{ form_label(form.contract, 'Type de contrat', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.contract, {'attr': {'class': 'form-control col-2'} }) }}
        </div>
    </div>

    <div class="form-group padding-bottom-3">
        <div class="row form-group backgroundWA">
            <h3>Entreprise / Administration</h3>
        </div>
        <div class="row form-group">
            {{ form_label(form.company, 'Nom de l\'entreprise', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.company, {'attr': {'class': 'form-control col-9'} }) }}
        </div>
        <div class="row form-group">
            {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control col-3'} }) }}
            <div class="col-1"></div>
            {{ form_label(form.department, 'Département', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.department, {'attr': {'class': 'form-control col-3'} }) }}
        </div>
        <div class="row justify-content-start form-group ">
            {{ form_label(form.imageFile, 'Logo de l\'entreprise', {'label_attr': {'class': 'col-form-label col-2'} }) }}
            {{ form_widget(form.imageFile.file, {'attr': {'class': 'form-control-file col-9'} }) }}
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Attention :</strong> cette expérience sera visible dès la validation de ce formulaire.
    </div>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-2">
            <a href="{{ path('crud-trainings') }}" class="btn btn-danger">Annuler</a>
        </div>
        <div class="col-2">{{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}, 'label': 'Enregistrer' }) }}</div>
        <div class="col-4"></div>
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}
{% endblock body %}