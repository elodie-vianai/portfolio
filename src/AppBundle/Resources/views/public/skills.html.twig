{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Compétences - {{ parent() }}{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/skills.css') }}">
{% endblock stylesheets %}

{% block javascript %}
    <script src="{{ asset('js/utils.js')}}"></script>
{% endblock javascript %}

{% block body %}
    <div class="row justify-content-center padding-bottom-5">
        <h1 class="h1 text-center">Mes compétences</h1>
    </div>

    <div class="row d-flex justify-content-end">
        <nav aria-label="Page navigation">
            {#<ul class="pagination">#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='all'>Tout afficher</a></li>#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='bureautique'>Bureautique</a></li>#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='developpement'>Développement</a></li>#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='graphisme'>Graphisme</a></li>#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='langues'>Langues</a></li>#}
                {#<li class="page-item"><a class="page-link" href="#" data-target='professionnel'>Professionnel</a></li>#}
            {#</ul>#}
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#" id='all'>Tout afficher</a></li>
                <li class="page-item"><a class="page-link" href="#" id='bureautique'>Bureautique</a></li>
                <li class="page-item"><a class="page-link" href="#" id='developpement'>Développement</a></li>
                <li class="page-item"><a class="page-link" href="#" id='graphisme'>Graphisme</a></li>
                <li class="page-item"><a class="page-link" href="#" id='langues'>Langues</a></li>
                <li class="page-item"><a class="page-link" href="#" id='professionnel'>Professionnel</a></li>
            </ul>
        </nav>
    </div>

    <div class="row justify-content-center padding-bottom-3">
        {% for skill in skills %}
            <div class="image-container">
                <img src="{{ asset('images/logos/skills/'~skill.image) }}" id="{{ skill.name }}" class="image-skill {{ skill.category|lower }}"
                     data-toggle="tooltip" data-placement="top" title="{{ skill.name }}">
            </div>
        {% endfor %}
    </div>
{% endblock body %}