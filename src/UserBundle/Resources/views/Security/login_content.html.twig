{% trans_default_domain 'FOSUserBundle' %}
<h1 class="h1 margin-bottom-5 text-center">Connexion</h1>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="jumbotron jumbotron-fluid jumbotronized">

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <label for="username">Nom d'utilisateur</label>
            </div>
            <div class="col-3">
                <input id="username" name="_username" value="{{ last_username }}" required />
            </div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-4">
                <label for="password">Mot de passe</label>
            </div>
            <div class="col-3">
                <input type="password" id="password" name="_password" required />
            </div>
        </div>

        <div class="row padding-top-3">
            <div class="col-5"></div>
            <div class="col-5">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Se souvenir de moi</label>
            </div>
        </div>

        <div class="row padding-top-3">
            <div class="col-8"></div>
            <div class="col-2">
                <input type="submit" id="_submit" name="_submit" value="Se connecter" />
            </div>
            <div class="col"></div>
        </div>
    </form>
</div>
